<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.io7m.laurel.gui.internal.LMergeView">
   <children>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onAddSelected" prefHeight="32.0" prefWidth="32.0">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@image-add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%merge.tooltip.add" />
                     </tooltip>
                  </Button>
                  <Button fx:id="removeSelected" disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRemoveSelected" prefHeight="32.0" prefWidth="32.0">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@image-remove.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%merge.tooltip.remove" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
            <SplitPane dividerPositions="0.75" orientation="VERTICAL">
               <items>
                  <ListView fx:id="filesView" />
                  <TextArea fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="200.0" />
               </items>
            </SplitPane>
         </children>
      </VBox>
      <Region maxHeight="-Infinity" minHeight="-Infinity" prefHeight="8.0" />
      <HBox>
         <children>
            <Button cancelButton="true" minHeight="-Infinity" mnemonicParsing="false" onAction="#onCancelSelected" prefHeight="32.0" prefWidth="128.0" text="%cancel" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="mergeSelected" defaultButton="true" disable="true" layoutX="10.0" layoutY="10.0" minHeight="-Infinity" mnemonicParsing="false" onAction="#onMergeSelected" prefHeight="32.0" prefWidth="128.0" text="%mergeButton" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
