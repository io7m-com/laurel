            </HBox>
        <TableView fx:id="metadataList" GridPane.rowIndex="1" GridPane.rowSpan="2147483647">
          <columns>
            <TableColumn prefWidth="75.0" text="%metadata_name" />
                  <TableColumn prefWidth="75.0" text="%metadata_value" />
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>
      </children>
